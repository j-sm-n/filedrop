<%= form_for ([current_user, @folder]) do |f| %>
  <%= f.label :name, 'Folder name' %>
  <%= f.text_field :name %>
  <%= f.label 'Parent Folder' %>
  <%= f.collection_select(:id, current_user.folders, :id, :name, prompt: false) %>
  <%= f.radio_button :permission_level, 'unrestricted', checked: true %>
  <%= label :permission_level_unrestricted, 'Unrestricted' %>
  <%= f.radio_button :permission_level, 'restricted'%>
  <%= label :permission_level_restricted, 'Restricted' %>
  <%= f.submit %>
<% end %>
