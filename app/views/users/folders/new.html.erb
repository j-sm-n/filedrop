
<div class="row">
	<div class="container">
    <div class="col-md-6">
      <%= form_for ([current_user, @folder]) do |f| %>
  			<form>
          <div class="form-group">
            <%= f.label :name, 'Folder name'  %>
            <%= f.text_field :name, type: 'name', class: 'form-control', id: 'exampleInputName1', placeholder: 'Name' %>
          </div>
  			  <div class="form-group">
  					<label for="exampleInputFile">Parent Folder</label>
  					<%= f.collection_select(:id, current_user.folders, :id, :name, prompt: false, class: 'custom-select') %>
  			  </div>

          <fieldset class="form-group row">
            <legend class="col-form-legend col-md-4">Permission Level</legend>
              <div class="col-sm-6">
                <div class="form-check">
                  <label class="form-check-label">
                    <%= f.radio_button :permission_level, 'unrestricted', checked: true, class: 'form-check-input', type: 'radio', name: 'gridRadios', id: 'gridRadios1', value: 'option1' %>
                    <%= label :permission_level_unrestricted, 'Unrestricted' %>
                  </label>
                </div>
                <div class="form-check">
                  <label class="form-check-label">
                    <%= f.radio_button :permission_level, 'restricted', checked: true, class: 'form-check-input', type: 'radio', name: 'gridRadios', id: 'gridRadios1', value: 'option1' %>
                    <%= label :permission_level_restricted, 'Restricted' %>
                  </label>
                </div>
              </div>
          </fieldset>
          <%= f.submit class: 'btn btn-default' %>
  			</form>
  		<% end %>
    </div>
	</div>
</div>
