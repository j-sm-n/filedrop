
<div class="container user_edit">

  <%= form_for @user do |f| %>

    <table class="table">
      <thead>
          <h1>Profile Info:</h1>
      </thead>
      <tbody>
        <tr>
          <td><image class='profile_icon' src='/assets/user_icon.svg'></image></td>
          <td><h3><%= f.label :name, 'Edit Name' %></h3></td>
          <td><h3><%= f.text_field :name %></h3></td>
        </tr>
        <tr>
          <td><image class='profile_icon' src='/assets/email_icon.svg'></image></td>
          <td><h3><%= f.label :email, 'Edit Email' %></h3></td>
          <td><h3><%= f.text_field :email %></h3></td>
        </tr>
        <tr>
          <td><image class='profile_icon' src='/assets/password_icon.svg'></image></td>
          <td><h3><%= f.label :password, 'Edit Password' %></h3></td>
          <td><h3><%= f.text_field :password %></h3></td>
        </tr>
        <tr>
          <td><image class='profile_icon' src='/assets/password_icon.svg'></image></td>
          <td><h3><%= f.label :password_confirmation, 'Confirm Password' %></h3></td>
          <td><h3><%= f.text_field :password_confirmation %></h3></td>
        </tr>
      </tbody>
    </table>
    <!-- <div class="col-md-3"> -->
      <h3><%= link_to "<< Back To Profile", user_path(@user), class: 'btn btn-secondary col-md-3' %></h3>
    <!-- </div> -->
    <!-- <div class="col-md-offset-9"> -->
      <h3><%= f.submit 'Update Profile', class: 'btn btn-primary col-md-offset-3' %></h3>
    <!-- </div> -->

  <% end %>



</div>
