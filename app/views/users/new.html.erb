
<%= form_for @user do |f| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, type: 'email', class: 'form-control', id: 'exampleInputName1', placeholder: 'Name' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, type: 'email', class: 'form-control', id: 'exampleInputEmail1', placeholder: 'Email' %>
        </div>
        <div class="form-group">
          <%= f.label :sms_number, 'SMS Number' %>
          <%= f.text_field :sms_number, type: 'sms_number', class: 'form-control', id: 'exampleInputSms1', placeholder: 'SMS Number' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.text_field :password, type: 'password', class: 'form-control', id: 'exampleInputPassword1', placeholder: 'Password' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.text_field :password_confirmation, type: 'password_confirmation', class: 'form-control', id: 'exampleInputPasswordConfirmation1', placeholder: 'Confirm Password' %>
        </div>
        <%= f.submit 'Create Account', type: 'submit', class: 'btn btn-default'%>
      </form>
    </div>
  </div>
<% end %>
