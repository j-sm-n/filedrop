<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :sms_number, 'SMS Number' %>
  <%= f.text_field :sms_number %>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <%= f.label :password_confirmation, 'Confirm Password' %>
  <%= f.text_field :password_confirmation %>
  <%= f.submit 'Create Account' %>
<% end %>
