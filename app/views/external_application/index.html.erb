<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for :notification do |f| %>
      <%= f.label :name, 'New Application Name:' %>
      <%= f.text_field :name  %>
      <%= f.submit "Generate API Key", class: 'btn btn-default' %>
    <% end %>
  </div>
</div>

<%= @applications.each do |application| %>
  <div class="row">
    <div class="col_md_4">
      Application Name: <%= application.name %>
    </div>
    <div class="col-md-4">
      API Key: <%= application.api_key %>
    </div>
    <div class="col-md-4">
      <%= link_to "Generate New API", notification_path %>
    </div>
  </div>
<% end %>
