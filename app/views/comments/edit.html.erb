<div class="container">
  <%= form_for(@comment, url: user_comment_path, class: "form-group") do |f| %>
    <%= f.text_area :content, class: "form-control" %>
    <%= f.hidden_field :comment_id, value: @comment.id %>
    <%= f.submit "Update Comment", class: "form-control btn btn-primary" %>
  <% end %>
</div>
