    <div class="row">
      <div class="col-md-4 col-md-offset-4">
          <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group">
              <%= f.label :email  %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.text_field :password, type: 'password', class: 'form-control' %>
            </div>
          <%= f.submit "Login"%>
          <% end %>
      </div>
    </div>
